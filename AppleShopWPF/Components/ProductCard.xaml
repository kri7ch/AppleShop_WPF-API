<UserControl x:Class="AppleShopWPF.Components.ProductCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppleShopWPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="350" Background="White">
    <Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="270"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Image Source="\Assets\Images\Zaglushka.png" Width="218" Height="270" Grid.Row="0"/>

            <TextBlock x:Name="ProductNameText" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Product name" Foreground="Black" FontSize="32"/>
            <TextBlock x:Name="ProductCountText" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Product count" Foreground="Black" FontSize="32"/>
            <TextBlock x:Name="ProductPriceText" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Product price" Foreground="Black" FontSize="32"/>

            <Button x:Name="BtnBuyProduct" Style="{StaticResource btn_style_buy}" Content="Buy" Grid.Row="4" FontSize="32" Background="Black" Foreground="White" Width="250" Height="70"/>
        </Grid>
    </Border>
</UserControl>
