<Window x:Class="AppleShopWPF.Windows.AdminEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара" Height="480" Width="640" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Название" FontWeight="Bold"/>
            <TextBox x:Name="tbName" Margin="0,4,0,12"/>

            <TextBlock Text="Цена" FontWeight="Bold"/>
            <TextBox x:Name="tbPrice" Margin="0,4,0,12"/>

            <TextBlock Text="Остаток" FontWeight="Bold"/>
            <TextBox x:Name="tbStock" Margin="0,4,0,12"/>

            <TextBlock Text="Код изображения" FontWeight="Bold"/>
            <TextBox x:Name="tbImageCode" Margin="0,4,0,12"/>

            <TextBlock Text="Категория" FontWeight="Bold"/>
            <ComboBox x:Name="cbCategory" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="0,4,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Style="{StaticResource btn_style_buy}" Content="Сохранить" Width="120" Height="30" Margin="0,0,8,0" Click="Save_Click" Background="Black" Foreground="White"/>
            <Button Style="{StaticResource btn_style_buy}" Content="Отмена" Width="120" Height="30" Click="Cancel_Click" Background="#FFB14F4F" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>