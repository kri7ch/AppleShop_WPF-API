<Window x:Class="AppleShopWPF.Windows.AdminEditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editing a category" Height="360" Width="560" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Title" FontWeight="Bold"/>
            <TextBox x:Name="tbName" Margin="0,4,0,12"/>

            <TextBlock Text="Description" FontWeight="Bold"/>
            <TextBox x:Name="tbDescription" Margin="0,4,0,12" TextWrapping="Wrap" AcceptsReturn="True" Height="120"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Style="{StaticResource btn_style_buy}" Content="Save" Width="120" Height="30" Margin="0,0,8,0" Click="Save_Click" Background="Black" Foreground="White"/>
            <Button Style="{StaticResource btn_style_buy}" Content="Cancel" Width="120" Click="Cancel_Click" Background="#FFB14F4F" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>