<Window x:Class="AppleShopWPF.Windows.AdminEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователь" Height="450" Width="520" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Информация о пользователе" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="ID" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="{Binding Id}" FontSize="18"/>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Email" FontWeight="Bold" FontSize="20"/>
                <TextBlock Text="{Binding Email}" FontSize="18"/>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Телефон" FontWeight="Bold" FontSize="20"/>
                <TextBlock FontSize="18">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{Binding Phone}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Phone}" Value="">
                                    <Setter Property="Text" Value="Номер не указан"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Phone}" Value="{x:Null}">
                                    <Setter Property="Text" Value="Номер не указан"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <StackPanel Margin="0,6,0,0">
                <TextBlock Text="Адрес доставки" FontWeight="Bold" FontSize="20"/>
                <TextBlock TextWrapping="Wrap" FontSize="18">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{Binding DeliveryAddress}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DeliveryAddress}" Value="">
                                    <Setter Property="Text" Value="Адрес не указан"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DeliveryAddress}" Value="{x:Null}">
                                    <Setter Property="Text" Value="Адрес не указан"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <StackPanel Margin="0,10,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Статус:" FontWeight="Bold" VerticalAlignment="Center" FontSize="20"/>
                <CheckBox x:Name="cbBlocked" Content="Активен" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="18" VerticalContentAlignment="Center"
                          IsChecked="{Binding IsActive, Mode=TwoWay}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Style="{StaticResource btn_style_buy}" Content="Save" Width="120" Height="30" Margin="0,0,8,0" FontSize="16" Click="Save_Click" Background="Black" Foreground="White"/>
            <Button Style="{StaticResource btn_style_buy}" Content="Cancel" Width="100" Height="30" Click="Cancel_Click" FontSize="16" Background="#FFB14F4F" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>