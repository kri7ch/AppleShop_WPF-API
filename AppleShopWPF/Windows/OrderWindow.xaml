<Window x:Class="AppleShopWPF.Windows.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Order"
        Height="900" Width="1400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">
    <Grid>
        <Border CornerRadius="16" Background="White" Padding="24" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1200" Height="700" BorderThickness="1" BorderBrush="#DDD">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Order Checkout" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Content="✕" Width="40" Height="40" FontSize="20" Style="{StaticResource btn_style_buy}" Background="#FFB14F4F" Foreground="White" Click="Cancel_Click" Cursor="Hand"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Text="Items" FontSize="22" FontWeight="Bold"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="380" Margin="0,8,0,0">
                            <ItemsControl x:Name="ItemsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="5" Padding="12" Margin="0,6,0,6" Background="#FAFAFA">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Quantity, StringFormat=Qty: {0}}" Margin="0,0,12,0" FontSize="16"/>
                                                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N2} ₽}" FontSize="16" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Totals" FontSize="22" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Items total:" FontSize="18"/>
                                <TextBlock x:Name="TotalItemsText" FontSize="18" FontWeight="Bold" Margin="8,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="Amount:" FontSize="18"/>
                                <TextBlock x:Name="TotalAmountText" FontSize="20" FontWeight="Bold" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Payment Method" FontSize="22" FontWeight="Bold"/>
                        <StackPanel Margin="0,8,0,0">
                            <RadioButton x:Name="RbCard" Content="Card" FontSize="18" Checked="PaymentMethod_Checked" VerticalContentAlignment="Center"/>
                            <RadioButton x:Name="RbCash" Content="Cash" FontSize="18" Margin="0,4,0,0" Checked="PaymentMethod_Checked" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel x:Name="CardForm" Margin="0,16,0,0" Visibility="Collapsed">
                            <TextBlock Text="Card details" FontSize="20" FontWeight="Bold"/>
                            <StackPanel Margin="0,8,0,0">
                                <TextBlock Text="Cardholder Name" FontSize="16"/>
                                <TextBox x:Name="TbCardholder" Padding="10 5 0 0" Style="{StaticResource tb_style_card}" Height="32" FontSize="16" Background="#F2F2F2"/>
                            </StackPanel>
                            <StackPanel Margin="0,8,0,0">
                                <TextBlock Text="Card Number" FontSize="16"/>
                                <TextBox x:Name="TbCardNumber" Padding="10 5 0 0" Style="{StaticResource tb_style_card}" Height="32" FontSize="16" Background="#F2F2F2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <StackPanel Width="120">
                                    <TextBlock Text="MM" FontSize="16"/>
                                    <TextBox x:Name="TbMonth" Padding="10 5 0 0" Style="{StaticResource tb_style_card}" Height="32" FontSize="16" Background="#F2F2F2"/>
                                </StackPanel>
                                <StackPanel Width="120" Margin="12,0,0,0">
                                    <TextBlock Text="YY" FontSize="16"/>
                                    <TextBox x:Name="TbYear" Padding="10 4 0 0" Style="{StaticResource tb_style_card}" Height="32" FontSize="16" Background="#F2F2F2"/>
                                </StackPanel>
                                <StackPanel Width="120" Margin="12,0,0,0">
                                    <TextBlock Text="CVV" FontSize="16"/>
                                    <PasswordBox x:Name="PbCvv" Padding="10 4 0 0" Style="{StaticResource pb_style_card}" Height="32" FontSize="16" Background="#F2F2F2"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <Button Content="Place Order" Style="{StaticResource btn_style_buy}" Width="180" Height="48" FontSize="18" Background="Black" Foreground="White" Click="Place_Click"/>
                    <Button Content="Cancel" Style="{StaticResource btn_style_buy}" Width="120" Height="48" FontSize="18" Margin="12,0,0,0" Background="#FFB14F4F" Foreground="White" Click="Cancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>