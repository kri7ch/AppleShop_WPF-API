<Window x:Class="AppleShopWPF.Windows.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Product Details" Height="700" Width="520"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F9F9F9" AllowsTransparency="False">
    <Border CornerRadius="20" Background="White" Margin="16">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="18" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center">
                <Image x:Name="ProductImage" Width="360" Height="360" Stretch="Uniform"/>
            </Border>

            <TextBlock x:Name="ProductNameText" Grid.Row="1" Text="Product Name" TextWrapping="Wrap" TextAlignment="Center"
                       FontSize="32" FontWeight="Bold" Foreground="#111" Margin="16,10"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock x:Name="ProductPriceText" FontSize="28" Foreground="#111" Margin="0,0,12,0"/>
                <TextBlock Text="â€¢" FontSize="24" Foreground="#999" Margin="0,0,12,0"/>
                <TextBlock x:Name="ProductCountText" FontSize="24" Foreground="#333"/>
            </StackPanel>

            <Grid Grid.Row="3" Margin="24,10,24,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Background="#FAFAFA" CornerRadius="12" Padding="16">
                    <TextBlock x:Name="AdditionalInfoText" TextWrapping="Wrap" Foreground="#555" FontSize="18">
                        Detailed information about the product will appear here.
                    </TextBlock>
                </Border>
            </Grid>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                <Button x:Name="BtnClose" Style="{StaticResource btn_style_buy}" Content="Close" Width="160" Height="52"
                        Background="Black" Foreground="White" FontSize="18" Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>