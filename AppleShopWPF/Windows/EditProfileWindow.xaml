<Window x:Class="AppleShopWPF.Windows.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Profile" Height="380" Width="520" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow" ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Profile" FontSize="22" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailBox" Margin="0,4,0,10"/>

            <TextBlock Text="Phone number"/>
            <TextBox x:Name="PhoneBox" Margin="0,4,0,10"/>

            <TextBlock Text="Addres"/>
            <TextBox x:Name="AddressBox" Margin="0,4,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource btn_style_buy}" Content="Save" Width="120" Height="30" Margin="0,0,10,0" Click="Save_Click" Background="Black" Foreground="White"/>
            <Button Style="{StaticResource btn_style_buy}" Content="Cancel" Width="120" Click="Cancel_Click" Background="#FFB14F4F" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>