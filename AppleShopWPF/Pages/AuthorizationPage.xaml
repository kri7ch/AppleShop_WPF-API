<Page x:Class="AppleShopWPF.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppleShopWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="Авторизация" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Apple Spectrum" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="0 60 0 0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Manjari"/>

        <Label Content="We are glad to see you here!" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Manjari"/>

        <Label Content="Email" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" FontSize="32" FontFamily="Manjari" Margin="25 160 0 0"/>

        <TextBox x:Name="btnEmailEnter" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Height="100" Background="#EBEBEB" Style="{StaticResource tb_style}" FontFamily="Manjari" FontSize="32" Padding="30 30 0 0"/>


        <Label Content="Password" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" FontSize="32" FontFamily="Manjari" Margin="25 170 0 0" VerticalAlignment="Top"/>

        <PasswordBox x:Name="btnPasswordEnter" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Height="100" Background="#EBEBEB" Style="{StaticResource pb_style}" FontFamily="Manjari" Margin="0,48,0,19" Padding="30 30 0 0" FontSize="32"/>

        <Button Style="{StaticResource btn_style}" Foreground="White" Cursor="Hand" Background="Black" Content="Enter" Grid.Column="1" Grid.Row="4" Height="100" Width="450" Grid.ColumnSpan="3" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnEnterClick"/>

        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="32" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Cursor="Hand">
            <Hyperlink Click="hyperlinkRegistration" TextDecorations="None" Foreground="Black">
                <Run Text="Don't have an account? Register"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Page>
