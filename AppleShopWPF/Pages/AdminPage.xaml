<Page x:Class="AppleShopWPF.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppleShopWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="AdminPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Apple Spectrum" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Manjari"/>

        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Background="Black" Width="1500" Height="124" CornerRadius="25">
            <UniformGrid Columns="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Style="{StaticResource btn_style_menu}" Content="Users" Width="260" Height="76" FontSize="36" Background="White" Margin="20" Click="UsersButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Products" Width="260" Height="76" FontSize="36" Background="White" Margin="20" Click="ProductsButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Orders" Width="260" Height="76" FontSize="36" Background="White" Margin="20" Click="OrdersButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Categories" Width="260" Height="76" FontSize="36" Background="White" Margin="20" Click="CategoriesButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Exit" Width="260" Height="76" FontSize="36" Margin="20" Click="LogoutButton_Click" Background="#FFB14F4F" Foreground="White"/>
            </UniformGrid>
        </Border>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="5" Margin="60,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TableTitle" Text="Users" FontSize="36" FontFamily="Manjari" Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,12,0,0" Visibility="Visible" x:Name="UsersCards">
                <Grid>
                    <ItemsControl x:Name="UsersItems">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" Orientation="Horizontal" HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="16" Padding="24" Margin="12" Width="800" Background="White">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                                        <TextBlock Text="№: " FontWeight="Bold" FontSize="24"/>
                                        <TextBlock Text="{Binding Id}" Margin="4,0" FontSize="24"/>
                                        <TextBlock Text=" • " Margin="6,0" FontSize="24"/>
                                        <TextBlock Text="{Binding Role.Name}" Foreground="#666" FontSize="24"/>
                                        <TextBlock Text=" • " Margin="6,0" FontSize="24"/>
                                        <TextBlock Text="Status: " FontWeight="Bold" FontSize="24"/>
                                        <TextBlock FontSize="24">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value=""/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Text" Value="Active"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Text" Value="Blocked"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Margin="0,8,0,0">
                                        <TextBlock Text="Email" FontWeight="Bold" FontSize="22"/>
                                        <TextBlock x:Name="tbEmail" Text="{Binding Email}" Background="Transparent" FontSize="22"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Margin="0,8,0,0">
                                        <TextBlock Text="Phone" FontWeight="Bold" FontSize="22"/>
                                        <TextBlock x:Name="tbPhone" Background="Transparent" FontSize="22">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding Phone}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Phone}" Value="">
                                                            <Setter Property="Text" Value="The number is not specified"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Phone}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="The number is not specified"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Margin="0,8,0,0">
                                        <TextBlock Text="Delivery Address" FontWeight="Bold" FontSize="22"/>
                                        <TextBlock x:Name="tbAddress" Background="Transparent" TextWrapping="Wrap" FontSize="22">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding DeliveryAddress}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DeliveryAddress}" Value="">
                                                            <Setter Property="Text" Value="The address is not specified"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DeliveryAddress}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="The address is not specified"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                                            <Button Style="{StaticResource btn_style_buy}" x:Name="btnEditUser" Content="Edit" Width="200" Height="56" FontSize="20" Margin="0,0,8,0" Click="EditUser_Click" Background="Black" Foreground="White"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="There are no users" FontSize="28" Foreground="#666" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ItemsSource, ElementName=UsersItems}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasItems, ElementName=UsersItems}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ScrollViewer>

            <ScrollViewer x:Name="ProductsCards" Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,12,0,0" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource btn_style_buy}" Content="Add a product" Width="220" Height="56" FontSize="20" Margin="0,0,8,0" Click="AddProduct_Click" Background="Black" Foreground="White"/>
                    </StackPanel>

                    <ItemsControl x:Name="ProductsItems" Grid.Row="1">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="16" Padding="24" Margin="12" Width="520" Background="#FFFFFF">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Price, StringFormat=Price: {0:C}}" Margin="0,6,0,0" FontSize="20"/>
                                        <TextBlock Text="{Binding StockQuantity, StringFormat=Count: {0}}" Margin="0,2,0,0" FontSize="20"/>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                            <Button Style="{StaticResource btn_style_buy}" Content="Edit" Width="180" Height="48" FontSize="18" Click="EditProduct_Click" Background="Black" Foreground="White"/>
                                            <Button Style="{StaticResource btn_style_buy}" Content="Delete" Width="140" Height="48" FontSize="18" Margin="8,0,0,0" Click="DeleteProduct_Click" Background="#FFB14F4F" Foreground="White"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="There are no products" FontSize="28" Foreground="#666" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ItemsSource, ElementName=ProductsItems}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasItems, ElementName=ProductsItems}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ScrollViewer>

            <ScrollViewer x:Name="OrdersCards" Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,12,0,0" Visibility="Collapsed">
                <Grid>
                    <ItemsControl x:Name="OrdersItems">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="16" Padding="24" Margin="12" Width="720" Background="#FFFFFF">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Id, StringFormat=Order №{0}}" FontSize="24" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding User.Email, StringFormat=User: {0}}" Margin="0,6,0,0" FontSize="20"/>
                                        <TextBlock Text="{Binding TotalAmount, StringFormat=The amount: {0:C}}" Margin="0,2,0,0" FontSize="20"/>
                                        <TextBlock Text="{Binding OrderDate, StringFormat=Order date: {0}}" Margin="0,2,0,0" FontSize="20"/>
                                        <TextBlock Text="{Binding Status.Name, StringFormat=Status: {0}}" Margin="0,2,0,0" FontSize="20"/>
                                        <TextBlock Text="{Binding DeliveryAddress, StringFormat=Addres: {0}}" Margin="0,6,0,0" TextWrapping="Wrap" FontSize="20"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="There are no orders" FontSize="28" Foreground="#666" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ItemsSource, ElementName=OrdersItems}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasItems, ElementName=OrdersItems}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ScrollViewer>

            <ScrollViewer x:Name="CategoriesCards" Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,12,0,0" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource btn_style_buy}" Content="Add a category" Width="240" Height="56" FontSize="20" Margin="0,0,8,0" Click="AddCategory_Click" Background="Black" Foreground="White"/>
                    </StackPanel>

                    <ItemsControl x:Name="CategoriesItems" Grid.Row="1">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="16" Padding="24" Margin="12" Width="560" Background="#FFFFFF">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}" Margin="0,6,0,0" TextWrapping="Wrap" FontSize="20"/>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                            <Button Style="{StaticResource btn_style_buy}" Content="Edit" Width="180" Height="48" FontSize="18" Click="EditCategory_Click" Background="Black" Foreground="White"/>
                                            <Button Style="{StaticResource btn_style_buy}" Content="Delete" Width="140" Height="48" FontSize="18" Margin="8,0,0,0" Click="DeleteCategory_Click" Background="#FFB14F4F" Foreground="White"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="There are no categories" FontSize="28" Foreground="#666" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ItemsSource, ElementName=CategoriesItems}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasItems, ElementName=CategoriesItems}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
