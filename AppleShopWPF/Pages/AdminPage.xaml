<Page x:Class="AppleShopWPF.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppleShopWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="AdminPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Apple Spectrum" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Manjari"/>

        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Background="Black" Width="1500" Height="124" CornerRadius="25">
            <UniformGrid Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Style="{StaticResource btn_style_menu}" Content="Users" Width="300" Height="76" FontSize="36" Background="White" Margin="20" Click="UsersButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Products" Width="300" Height="76" FontSize="36" Background="White" Margin="20" Click="ProductsButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Orders" Width="300" Height="76" FontSize="36" Background="White" Margin="20" Click="OrdersButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Categories" Width="300" Height="76" FontSize="36" Background="White" Margin="20" Click="CategoriesButton_Click"/>
            </UniformGrid>
        </Border>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="5" Margin="60,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TableTitle" Text="Таблица: Пользователи" FontSize="28" FontFamily="Manjari" Margin="0,0,0,10"/>

            <!-- Таблица пользователей -->
            <DataGrid x:Name="UsersGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="False"
                      CanUserAddRows="False"
                      Margin="0,12,0,0"
                      Visibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="160"/>
                    <DataGridTextColumn Header="Адрес" Binding="{Binding DeliveryAddress}" Width="200"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="RoleId" Binding="{Binding RoleId}" Width="70" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Регистрация" Binding="{Binding RegistrationDate, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" Width="160" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Активен" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Checked="IsActiveCheckBox_Checked"
                                          Unchecked="IsActiveCheckBox_Unchecked"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Таблица продуктов -->
            <ListView x:Name="ProductsList" Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Visibility="Collapsed">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="400"/>
                        <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price}" Width="150"/>
                        <GridViewColumn Header="Остаток" DisplayMemberBinding="{Binding StockQuantity}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Таблица заказов -->
            <DataGrid x:Name="OrdersGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0,12,0,0"
                      Visibility="Collapsed">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Email}" Width="200"/>
                    <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount}" Width="100"/>
                    <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate}" Width="150"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status.Name}" Width="100"/>
                    <DataGridTextColumn Header="Адрес доставки" Binding="{Binding DeliveryAddress}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Таблица категорий -->
            <DataGrid x:Name="CategoriesGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0,12,0,0"
                      Visibility="Collapsed">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
