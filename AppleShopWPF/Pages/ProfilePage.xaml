<Page x:Class="AppleShopWPF.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppleShopWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="Profile" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Apple Spectrum" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Manjari"/>

        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Background="Black" Width="1500" Height="124" CornerRadius="25">
            <UniformGrid Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Style="{StaticResource btn_style_menu}" Content="Menu" Width="300" Height="76" FontSize="36" Background="White" Margin="20" Click="btnMenuClick"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Categories" Width="300" Height="76" FontSize="36" Background="White" Margin="20" Click="CategoriesButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Basket" Width="300" Height="76" FontSize="36" Background="White" Margin="20" Click="BasketButton_Click"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Profile" Width="300" Height="76" FontSize="36" Background="White" Margin="20"/>
            </UniformGrid>
        </Border>
        
        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3" Margin="0,40,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
                <TextBlock Text="Personal information" FontSize="32" FontFamily="Manjari"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Email:" FontSize="26"/>
                <TextBlock Text="{Binding Email}" FontSize="24" Margin="0,0,0,10"/>

                <TextBlock Text="Password:" FontSize="26"/>
                <TextBlock Text="************" FontSize="24" Margin="0,0,0,10"/>

                <TextBlock Text="Phone:" FontSize="26"/>
                <TextBlock FontSize="24" Margin="0,0,0,10" Cursor="Hand" MouseLeftButtonUp="EditPhone_MouseLeftButtonUp"
                           Text="{Binding Phone, TargetNullValue=Add phone number}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Phone}" Value="">
                                    <Setter Property="Text" Value="Add phone number"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Address:" FontSize="26"/>
                <TextBlock FontSize="24" Margin="0,0,0,10" Cursor="Hand" MouseLeftButtonUp="EditAddress_MouseLeftButtonUp"
                           Text="{Binding DeliveryAddress, TargetNullValue=Add delivery address}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DeliveryAddress}" Value="">
                                    <Setter Property="Text" Value="Add delivery address"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

            </StackPanel>

        </StackPanel>

        <Button x:Name="btnEdit" Style="{StaticResource btn_style}" Content="Edit" Grid.Row="5" Grid.Column="1" FontSize="32" Width="300" Height="100" Background="Black" Foreground="White" Click="Edit_Click"/>
        <Button x:Name="btnViewOrders" Style="{StaticResource btn_style}" Content="My orders" Grid.Row="5" Grid.Column="2" FontSize="32" Width="300" Height="100" Background="#111" Foreground="White" Click="ViewOrders_Click"/>
        <Button x:Name="btnExit" Style="{StaticResource btn_style}" Content="Exit" Grid.Row="5" Grid.Column="3" FontSize="32" Width="300" Height="100" Background="#FFB14F4F" Foreground="White" Click="btnExit_Click"/>

    </Grid>
</Page>
