<Page x:Class="AppleShopWPF.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppleShopWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="Главное меню" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Apple Spectrum" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Manjari"/>

        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Background="Black" Width="1500" Height="124" CornerRadius="25">
            <UniformGrid Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Style="{StaticResource btn_style_menu}" Content="Menu" Width="300" Height="76" FontSize="36" Background="White" Margin="20"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Categories" Width="300" Height="76" FontSize="36" Background="White" Margin="20"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Basket" Width="300" Height="76" FontSize="36" Background="White" Margin="20"/>
                <Button Style="{StaticResource btn_style_menu}" Content="Profile" Width="300" Height="76" FontSize="36" Background="White" Margin="20"/>
            </UniformGrid>
        </Border>

        <ScrollViewer Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="5"
              VerticalScrollBarVisibility="Auto" 
              HorizontalScrollBarVisibility="Disabled"
              Margin="20">
            <UniformGrid x:Name="ProductsUniformGrid" 
                 Columns="4" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"/>
        </ScrollViewer>
    </Grid>
</Page>
